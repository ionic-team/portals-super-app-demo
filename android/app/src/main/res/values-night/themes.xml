<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SuperApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/super_200</item>
        <item name="colorPrimaryVariant">@color/super_500</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/super_500</item>
        <item name="colorSecondaryVariant">@color/super_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->

        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="Theme.Bar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/black</item>
    </style>

    <style name="Theme.SuperApp.Dashboard" parent="Theme.SuperApp">
        <item name="listColor">#1B1B1B</item>
    </style>

    <style name="Theme.SuperApp.Dialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="colorPrimaryDark">#1B1B1B</item>
        <item name="colorAccent">@color/super_500</item>
        <item name="colorPrimary">@color/super_200</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">#1B1B1B</item>
        <item name="actionMenuTextColor">#F2F1F6</item>
    </style>
</resources>